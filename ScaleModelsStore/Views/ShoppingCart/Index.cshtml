<h3>Your cart</h3>
<div id="update-msg">
</div>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.CartItems)
        {
            <tr id="row-@item.RecordId">
                <td rowspan="2" align="center">
                    @item.Product.ProductName
                </td>
                <td rowspan="2" align="center">
                    @item.Product.Price
                </td>
                <td rowspan="2" align="center" id="item-qntt-@item.RecordId">
                    @item.Quantity
                </td>
                <td align="center">
                    <a href="#" class="AddUnitLink" data-id="@item.RecordId">[+]</a>
                </td>
                <td rowspan="2" align="center">
                    <a href="#" class="CancelLink" data-id="@item.RecordId">Cancel</a>
                </td>
            </tr>
            <tr id="row-@item.RecordId">
                <td align="center">
                    <a href="#" class="RemoveUnitLink" data-id="@item.RecordId">[-]</a>
                </td>
            </tr>
        }
        <tr>
            <td>Total</td>
            <td></td>
            <td></td>
            <td id="cart-total">
                @Model.CartTotal
            </td>
        </tr>
    </tbody>
</table>
