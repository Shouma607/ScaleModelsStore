@model ScaleModelsStore.ViewModels.ShoppingCartViewModel
@{
    ViewBag.Title="Shopping cart";
}
<script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="~/Scripts/shopping-cart.js" type="text/javascript"></script>
<div>
    <h3>Your cart</h3>

    <div id="update-msg">
    </div>
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr id="row-1-@item.RecordId">
                    <td rowspan="2" align="center">
                        @Html.ActionLink(item.Product.ProductName, "Product", "Store", new { id = item.ProductId }, null)
                    </td>
                    <td rowspan="2" align="center">
                        @item.Product.Price
                    </td>
                    <td rowspan="2" align="center" id="item-qntt-@item.RecordId" data-id="@item.Quantity">
                        @item.Quantity
                    </td>
                    <td align="center">
                        <a href="#" class="AddUnitLink" qntt="@item.Quantity" data-id="@item.RecordId" max-qntt="3">[+]</a>
                    </td>
                    <td rowspan="2" align="center">
                        <a href="#" class="CancelLink" data-id="@item.RecordId">Cancel</a>
                    </td>
                </tr>
                <tr id="row-2-@item.RecordId">
                    <td align="center">
                        <a href="#" class="RemoveUnitLink" qntt="@item.Quantity" data-id="@item.RecordId">[-]</a>
                    </td>
                </tr>
            }
            <tr>
                <td>Total</td>
                <td></td>
                <td></td>
                <td id="cart-total">
                    @Model.CartTotal
                </td>
            </tr>
        </tbody>
    </table>
    <div class="Checkout">
        <p> 
            <a class="sms-button" href="@Url.Action("Index","Checkout")" title="Checkout"><span>Checkout</span></a>
        </p>
    </div>
</div>
