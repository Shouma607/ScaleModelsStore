@model IEnumerable<ScaleModelsStore.ViewModels.OrdersViewModel>
@{
    ViewBag.Title = "Current orders";
}
<script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
<script type="text/javascript" src="~/Scripts/account-menu.js"></script>


<h2>@ViewBag.Title</h2>
<p></p>
<div>
    @{Html.RenderAction("AccountMenu", "Manage");}
    <h4>View the details of your order by clicking on its row</h4>
    <hr />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Total price</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr class="table-active" onclick="location.href='@Url.Action("Details","Orders",new { id = item.Order.OrderId })'">
                    <td>@item.Order.OrderId</td>
                    <td>@item.Price</td>
                    <td>@item.Order.OrderStatuses.StatusDescription</td>
                </tr>
            }
        </tbody>
    </table>

</div>
