@model ScaleModelsStore.ViewModels.ChangeEmailViewModel
@{ 
    ViewBag.Title = "Account parameters";
}
<script type="text/javascript" src="~/Scripts/account-menu.js"></script>


<h2>@ViewBag.Title</h2>
@Html.Partial("AccountMenu")
@using (Html.BeginForm("ChangeEmail", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change E-mail address Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.OldEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.OldEmail, new { @class = "form-control", @Value=User.Identity.GetEmail()})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NewEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.NewEmail, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ConfirmEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.ConfirmEmail, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change e-mail" class="sms-button" />
        </div>
    </div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
