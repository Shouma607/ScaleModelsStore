@model ScaleModelsStore.ViewModels.ChangePhoneViewModel
@{
    ViewBag.Title = "Account parameters";
}
<script type="text/javascript" src="~/Scripts/account-menu.js"></script>


<h2>@ViewBag.Title</h2>
@Html.Partial("AccountMenu")
@using (Html.BeginForm("ChangePhone", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Phone number Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model=>model.OldPhone, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.OldPhone, new { @class = "form-control", @Value =  ViewBag.Phone})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NewPhone, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.NewPhone, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change phone number" class="sms-button" />
        </div>
    </div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}